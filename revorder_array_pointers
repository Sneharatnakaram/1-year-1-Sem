#include<stdio.h>
int main()
{
int n,i,*ptr;
printf("enter size of the array");
scanf("%d",&n);
int a[n];
printf("enter the elements in array");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
ptr=&a[n-1];
printf("reverse of array is");
for(i=n-1;i>=0;i--)
{
printf("%5d",*ptr);
ptr=ptr-1;
}
return 0;
}


output


enter size of the array4
enter the elements in array4 7 2 3
reverse of array is    3    2    7    4
